<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <title>Home Page</title>

    <!-- External CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <!-- Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Stencil+Text:wght@500;900&display=swap"
      rel="stylesheet"
    />
    <script src="https://kit.fontawesome.com/eef3fdefd6.js" crossorigin="anonymous"></script>


    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/map.css" type="text/css" />

    <!-- External JS (Google Maps API)-->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAzdbNYOtKimjrLw5o-CH7qFtjNwbN_SaM&libraries=places"
      async
      defer
    ></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/load_map.js"></script>
    <script type="text/javascript" src="/scripts/save_map.js"></script>
    <script type="text/javascript" src="/scripts/add_point.js"></script>
    <script type="text/javascript" src="/scripts/create_map.js"></script>
    <script type="text/javascript" src="/scripts/delete_point.js"></script>
    <script type="text/javascript" src="/scripts/map_filter.js"></script>

    <script type="text/javascript" src="/scripts/map_filter.js"></script>
    <!-- Testing Google Maps API -->
  </head>
  <script>
    // set UserID to appVars Obj
    window.appVars = {userID: userID};
    console.log("appvars", window.appVars);
  </script>
  <body>
    <main class="container">
      <div class="left">
        <div class="profile">
          <div>
            <form action="/user">
              <button type="submit" id="goprofile">
                <i class="fas fa-chevron-circle-right"></i> Your Profile
              </button>
            </form>
          </div>
        </div>
        <div class="mapName">
          <header>
            <h1 id="title" contenteditable="true">Name Your Map</h1>
          </header>
        </div>
        <div class="features">
          <div>
            <input type="text" placeholder="Search.." />
          </div>
          <div>
            <button id="save_map"><i class="fas fa-save"></i> SAVE MAP</button>
            <button id="create_map"><i class="far fa-plus-square"></i> CREATE MAP</button>
          </div>
        </div>

        <div id="map"></div>
      </div>

      <div class="right">
        <h3>Maps List</h3>
        <table>
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody id="maps"></tbody>
        </table>
      </div>
    </main>
  </body>
</html>
